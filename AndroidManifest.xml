<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="elder.example.imadoko"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AfterMain"
            android:label="@string/title_activity_after_main" >
        </activity>
        <activity
            android:name=".ContactAStudent"
            android:label="@string/title_activity_contact_astudent" >
        </activity>
        <activity
            android:name=".SendGroupMessage"
            android:label="@string/title_activity_send_group_message" >
        </activity>
        <activity
            android:name=".SetLongTimeAbsence"
            android:label="@string/title_activity_set_long_time_absence" >
        </activity>
        <activity
            android:name=".ContactDevelopers"
            android:label="@string/title_activity_contact_developers" >
        </activity>
        <activity
            android:name=".UbiSeminar"
            android:label="@string/title_activity_ubi_seminar"
            android:parentActivityName=".AfterMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="elder.example.imadoko.AfterMain" />
        </activity>
        <activity
            android:name=".ForTheSecretary"
            android:label="@string/title_activity_for_the_secretary" >
        </activity>
    </application>

</manifest>
